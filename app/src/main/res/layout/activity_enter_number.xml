<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:background="@color/white"
    tools:context=".EnterNumberActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:layout_gravity="center"
            android:src="@drawable/otp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/opensans"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="OTP Verification"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/opensans"
                android:text="We will send you a "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/opensans"
                android:text=" One Time Password"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/opensans"
            android:layout_gravity="center"
            android:text="on this number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/opensans"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:text="Enter Your 10-digit Mobile Number"/>

        <EditText
            android:id="@+id/etenaphoneno"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="#000000"
            android:padding="10dp"
            android:fontFamily="@font/opensans"
            android:background="@drawable/card_corners"
            android:backgroundTint="@color/periwinkle"
            android:gravity="center"
            android:inputType="phone"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnsendotp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/opensans"
        android:layout_margin="20dp"
        android:background="@drawable/card_corners"
        android:backgroundTint="@color/darkcerulian"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:text="Get OTP"/>

</RelativeLayout>